{
  "manifest_version": 3,
  "name": "FloatingMD",
  "version": "1.0",
  "description": "A floating Markdown editor for collecting and organizing web content",
  "permissions": [
    "storage", 
    "tabs", 
    "clipboardWrite", 
    "clipboardRead", 
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["floating-editor.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["marked.min.js", "editor.html", "editor.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 